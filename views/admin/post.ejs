<%- include('../includes/head.ejs') %>
</head>

<body>
    <%- include('../includes/header.ejs') %>
        <main class="main">
            <div class="container">
                <section class="super-box">
                    <h2 class="title super-box__left">
                        <%= title %>
                    </h2>
                    <form class="form super-box__right" action="/admin/<% if (editing) { %>edit-post<% } else { %>add-post<% } %>" method="POST">
                        <div class="form-control">
                            <label for="title">Title</label>
                            <input type="text" name="title" id="title" value="<% if (editing) { %><%= post.title %><% } %>">
                        </div>
                        <div class="form-control">
                            <label for="text">Text</label>
                            <textarea name="text" id="text" rows="5"><% if (editing) { %><%= post.text %><% } %></textarea>
                        </div>
                        <% if (editing) { %>
                            <input type="hidden" value="<%= post._id %>" name="postId">
                        <% } %>
                    
                        <button class="btn form-btn" type="submit">
                            <% if (editing) { %>Update post<% } else { %>Add post<% } %>
                        </button>
                    </form>
                </section>
            </div>
        </main>
        <%- include('../includes/footer.ejs') %>