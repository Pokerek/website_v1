<%- include('../includes/head.ejs') %>
</head>

<body>
    <%- include('../includes/header.ejs') %>
        <main class="main">
            <div class="container">
                <section class="journal super-box">
                    <h2 class="title super-box__left">
                        <%= title %>
                        <a href="/admin/add-post" class="btn journal__btn">New post</a>
                    </h2>
                    <div class="journal__inner super-box__right">
                        <% for (post of posts) { %>
                            <article class="post">
                                <header class="post__header">
                                    <h3 class="post__title">
                                        <%= post.title %>
                                    </h3>
                                    <span class="post__date">
                                        <a href="/admin/edit-post/<%= post._id %>?edit=true " class="btn post__btn"><i class="fa-solid fa-pen-to-square"></i></a>
                                    </span>
                                </header>
                                <p class="post__text">
                                    <%= post.text %>
                                </p>
                            </article>
                        <% } %>
                    </div>
                </section>
            </div>
        </main>
        <%- include('../includes/footer.ejs') %>